{
    "name": "nicovideo-comfortable-controller-fader",
    "version": "1.0",
    "manifest_version": 3,
    "description": "ニコニコ動画のプレイヤー下部のコントローラーを自然にフェードイン・フェードアウトさせます。",
    "content_scripts": [
        {
            "matches": [
                "https://www.nicovideo.jp/watch/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "128": "icons/icon_128.png"
    }
}
